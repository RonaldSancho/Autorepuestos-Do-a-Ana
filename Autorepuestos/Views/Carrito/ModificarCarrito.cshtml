@model Autorepuestos.Entities.CarritoEntities
@{
    ViewBag.Title = "ModificarCarrito";
}

<div class="container">
    <div class="card pd-20 pd-sm-40">
        <h6 class="card-body-title">Pedidos</h6>
        <p class="mg-b-20 mg-sm-b-30" style="font-weight: bold;">Editar un pedido</p>
        @using (Html.BeginForm("ModificarCarrito", "Carrito", FormMethod.Post, new { @class = "form-layout row mg-b-25" }))
        {
            @Html.HiddenFor(m => m.IdCarrito, new{@class="form-control", @style="color:grey"})

            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.NombreProducto, htmlAttributes: new {@class="form-control-label"})
                    @Html.DisplayFor(model => model.NombreProducto, new { @class = "form-control" })
                </div>
            
            
                <div class="form-group mg-b-10-force">
                    @Html.LabelFor(m => m.Existencias, htmlAttributes: new{@class="form-control-label"})
                    @Html.DisplayFor(model => model.Existencias, new { @class = "form-control" })
                </div>
            
                <div class="form-group mg-b-10-force">
                    @Html.LabelFor(m => m.Cantidad, htmlAttributes: new{@class="form-control-label"})
                    @Html.EditorFor(m => m.Cantidad/*, new{@class="form-control", @style="color:grey"}*/)
                </div>
            </div>

            <div class="form-layout-footer">
                <button class="btn btn-primary" role="button">Modificar</button>
                <a class="btn btn-secondary" role="button" href="@Url.Action("CarritoCompras","Carrito")">Cancelar</a>
            </div>
        }
    </div>
</div>

