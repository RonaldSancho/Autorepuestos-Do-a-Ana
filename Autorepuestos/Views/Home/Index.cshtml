@model Autorepuestos.Entities.UsuariosEntities

@{
    ViewBag.Title = "InicioSesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

    <div class="d-flex align-items-center justify-content-center bg-sl-primary ht-100v">

        <div class="login-wrapper wd-300 wd-xs-350 pd-25 pd-xs-40 bg-white">
            <div class="signin-logo tx-center tx-24 tx-bold tx-inverse">AutoRepuestos<span class="tx-info tx-normal">DoñaAna</span></div>
            <div class="tx-center mg-b-60">Inicio de Sesión</div>

            @using (Html.BeginForm("ConsultarProductos", "Home", FormMethod.Post)){
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Correo, new {@class="form-control", @placeholder="Correo"})
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Contrasena, new {@class="form-control", @placeholder="Contraseña", @type="Password"})
                    @*<a href="" class="tx-info tx-12 d-block mg-t-10">No recuerda su contraseña?</a>*@
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Iniciar sesión</button>
                </div>
            }

            @*<div class="mg-t-60 tx-center">Not yet a member? <a href="page-signup.html" class="tx-info">Sign Up</a></div>*@
        </div>
    </div>


