@model Autorepuestos.Entities.PedidosEntities
@{
    ViewBag.Title = "ModificarPedido";
}


<div class="container">
    <div class="card pd-20 pd-sm-40">
        <h6 class="card-body-title">Pedidos</h6>
        <p class="mg-b-20 mg-sm-b-30" style="font-weight: bold;">Editar un pedido</p>
        @using (Html.BeginForm("ModificarPedidoProveedores", "Home", FormMethod.Post, new { @class = "form-layout row mg-b-25" }))
        {
            @*<div class="form-layout">
        <div class="row mg-b-25">*@

            @Html.HiddenFor(m => m.pIdPedido, new{@class="form-control", @style="color:grey"})



            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.IdProducto, htmlAttributes: new {@class="form-control-label"})
                    @Html.DropDownListFor(model => model.IdProducto, ViewBag.ComboProductos as List<SelectListItem>, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    @Html.LabelFor(m => m.Cantidad, htmlAttributes: new{@class="form-control-label"})
                    @Html.EditorFor(m => m.Cantidad)
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    @Html.LabelFor(m => m.IdProveedor, htmlAttributes: new{@class="form-control-label"})
                    @Html.DropDownListFor(model => model.IdProveedor, ViewBag.ComboProveedores as List<SelectListItem>, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    @Html.LabelFor(m => m.PrecioProducto, htmlAttributes: new{@class="form-control-label"})
                    @Html.EditorFor(m => m.PrecioProducto/*, new{@class="form-control", @style="color:grey"}*/)
                </div>
            </div>
            <div class="col-lg-8">
                <div class="form-group mg-b-10-force">
                    @Html.LabelFor(m => m.PrecioTotal, htmlAttributes: new{@class="form-control-label"})
                    @Html.EditorFor(m => m.PrecioTotal/*, new{@class="form-control", @style="color:grey"}*/)
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    @Html.LabelFor(m => m.IdUsuario, htmlAttributes: new{@class="form-control-label"})
                    @Html.DropDownListFor(model => model.IdUsuario, ViewBag.ComboUsuarios as List<SelectListItem>, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-layout-footer">
                <button class="btn btn-primary" @*data-bs-toggle="modal" href="#exampleModalToggle"*@ role="button">Modificar</button>
                <a class="btn btn-secondary" role="button" href="@Url.Action("MostrarPedidoProveedores","Home")">Cancelar</a>
            </div>

            <!-- form-layout-footer -->
            @*</div>*@
            @*</div>*@
        }
    </div>
</div>


