@* ---------------------------Edita la cantidad del primer producto----------------------------  *@
<div id="EditarCantidad" class="modal fade ">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h5>Editar Cantidad</h5>
            </div>
            <div class="modal-body">
                <div class="col-lg-10">
                    <label>Cantidad</label>
                    <input class="form-control" value="2" type="number">
                </div><!-- col -->

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div id="EliminarProducto" class="modal fade ">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Eliminación Exitosamente</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-body">
                <h5>Producto eliminado </h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<div id="AgregarProducto" class="modal fade ">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-body">
                <h5>Producto agregado</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
