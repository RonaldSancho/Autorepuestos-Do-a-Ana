@*La ventana de agregar un producto debe ser una vista por aparte*@
<div class="sl-pagebody">
    <div class="card pd-20 pd-sm-40 mg-t-50">
        <h6 class="card-body-title ">Ventas</h6>

        <div class="row  ">
            <div class="col-lg-4">
                <label>Vendedor</label>
                <select class="form-control select2" data-placeholder="Choose one">
                    <option label="Seleccione un vendedor"></option>
                    <option value="Allan">Allan</option>
                    <option value="Elgin">Elgin</option>
                    <option value="Jonnatan">Jonnatan</option>
                    <option value="Ana">Ana</option>
                </select>
                <br />

            </div><!-- col-4 -->
            <div class="col-lg-4 ">
                <label>Nombre del cliente:</label>
                <input class="form-control" placeholder="Cliente" type="text">
            </div><!-- col-4 -->
            <!-- col-4 -->
        </div><!-- row -->
        <div class="row">
            <div class="col-lg-4 mg-t-20 mg-lg-t-0">
                <label>Seleccionar Producto</label>
                <select class="form-control select2-show-search" data-placeholder="Choose one (with searchbox)">
                    <option label="Seleccione el producto"></option>
                    <option value="Bujias">Bujias</option>
                    <option value="Coolant">Coolant</option>
                    <option value="Zapatas">Zapatas</option>
                    <option value="Bombas">Bombas</option>
                    <option value="Fibras">Fibras</option>
                </select>
            </div><!-- col-4 -->
            <div class="col-2">
                <label>Cantidad</label>
                <input class="form-control" value="1" type="number">
            </div><!-- col -->
            <div class="col-2 mg-t-10 mg-lg-t-0">
                <label>Precio total</label>
                <input class="form-control" placeholder="₡2500" type="text">
            </div><!-- col -->
            <div class="col-4 mg-t-10 mg-lg-t-0">
                <a href="#AgregarProducto" role="button" class="btn btn-large btn-primary" data-toggle="modal">Agregar Producto</a>
            </div>
        </div>


    </div><!-- card -->
    <br />
