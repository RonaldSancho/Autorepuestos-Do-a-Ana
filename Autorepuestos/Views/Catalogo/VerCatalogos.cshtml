@model IEnumerable<Autorepuestos.Entities.CatalogosEntities>
@{
    ViewData["Title"] = "ConsultarProductos";

}
<br />
<br />
<br />

<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/template/imagen/prop1.png" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="/template/imagen/prop2.png" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="/template/imagen/prop3.png" class="d-block w-100">
        </div>
    </div>
</div>
<h2 class="TituloProductos text-light">Lo más destacado</h2>
<br />

<div class="row gy-4 justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="gallery-item h-100">
                <div class="card">
                    <br />
                    <img style="height:200px;width:175px" class='mx-auto img-thumbnail'
                         src="@Url.Content(item.Imagen)" />

                    <div class="card-body text-center mx-auto">
                        <div class='cvp'>
                            <h5 class="card-title font-weight-bold">@Html.DisplayFor(modelItem => item.NombreProducto)</h5>
                            <p class="card-text">₡@Html.DisplayFor(modelItem => item.Precio)</p>
                            <a class="btn btn-dark" role="button" href="@Url.Action("ProductoCarrito", "Carrito", new{id = item.IdProducto})">Agregar al Carrito</a> <br><br>
                            <a class="btn btn-dark" role="button" href="@Url.Action("VerProductoCatalogo","Catalogo", new{id = item.IdProducto})">Ver más</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/js/site.js"></script>
