@model IEnumerable<Autorepuestos.Entities.CatalogosEntities>
@{
    ViewData["Title"] = "ConsultarProductos";
}
<br />
<br />
<br />
<h2>Nuestros productos</h2>
<br />
<br />


<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/template/imagen/prop1.png" class="d-block w-100" width="1250" height="700">
        </div>
        <div class="carousel-item">
            <img src="/template/imagen/prop2.png" class="d-block w-100" width="1250" height="700">
        </div>
        <div class="carousel-item">
            <img src="/template/imagen/prop3.png" class="d-block w-100" width="1250" height="700">
        </div>
    </div>
</div>
<br />
<br />



<div class="row gy-4 justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="gallery-item h-100">
                <div class="card">
                    <br />
                    <img class='mx-auto img-thumbnail'
                         src="@Url.Content(item.Imagen)"
                         width="150" height="200" />

                    <div class="card-body text-center mx-auto">
                        <div class='cvp'>
                            <h5 class="card-title font-weight-bold">@Html.DisplayFor(modelItem => item.NombreProducto)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                            @Html.HiddenFor(modelItem => item.Precio)
                            <br>
                            <p class="card-text">₡@Html.DisplayFor(modelItem => item.Precio)</p>
                            <a class="btn btn-dark" role="button" href="@Url.Action("ProductoCarrito", "Carrito", new{id = item.IdProducto})">Agregar al Carrito</a> <br><br>
                            <a class="btn btn-dark" role="button" href="@Url.Action("VerProductoCatalogo","Catalogo", new{id = item.IdProducto})">Ver más</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/js/site.js"></script>

