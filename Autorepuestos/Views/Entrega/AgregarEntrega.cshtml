@model Autorepuestos.Entities.EntregasEntities
@{
    ViewBag.Title = "AgregarEntrega";
}
<div class="contenedor" >


<div class="row">
    <div class="col-md-12">
            <div class="card" style="background-color: white">
                <div class="card-header" style="background-color: #cbcbcb; height: 50px;">
                    <h3 class="titulo-card-estilo">Agregar Entrega</h3>
            </div>
            <div class="card-body">
                <br />

                @using (Html.BeginForm("AgregarEntrega", "Entrega", FormMethod.Post, new { @class = "form-layout row mg-b-25" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">

                        <div class="col-md-4">
                            @Html.LabelFor(m => m.Productos, new{@class="form-control-label"})
                            @Html.TextBoxFor(model => model.Productos, new { @class = "form-control" })
                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(m => m.DireccionEntrega, new{@class="form-control-label"})
                            @Html.TextBoxFor(m=>m.DireccionEntrega, new{@class="form-control", @style="color:grey"})
                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(m => m.IdUsuario, new{@class="form-control-label"})
                            @Html.DropDownListFor(model => model.IdUsuario, ViewBag.ComboUsuario as List<SelectListItem>, new { @class = "form-control" })
                        </div>

                    </div>
                    <br />
                    <br />
                    <br />

                   @* <div class="row">

                        <div class="col-md-4">
                            @Html.LabelFor(m => m.Estado, new{@class="form-control-label"})
                            @Html.TextBoxFor(m=>m.Estado, new{@class="form-control", @style="color:grey"})
                        </div>
                    </div>*@

                    <div class="row">
                        <div class="col-md-8">
                            <button class="btn btn-primary" role="button" onclick="MensajeEntregaAgregada()">Agregar</button>
                            <a class="btn btn-secondary" role="button" href="@Url.Action("VerEntregas","Entrega")">Cancelar</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
</div>

<script src="~/js/site.js"></script>