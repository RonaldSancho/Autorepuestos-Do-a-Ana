@model Autorepuestos.Entities.EntregasEntities
@{
    ViewBag.Title = "EditarEntrega";
}


<div class="contenedor">
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="background-color: white">
                <div class="card-header" style="background-color: #cbcbcb; height: 50px;">
                    <h3 class="card-title" style="color: black; font-weight: bold; font-size: 20px;">Modificar Entrega</h3>
                </div>
                <div class="card-body">
                    <br />

                    @using (Html.BeginForm("EditarEntrega", "Entrega", FormMethod.Post, new { @class = "form-layout row mg-b-25" }))
                    {
                        @Html.HiddenFor(m => m.pIdEntrega, new{@class="form-control", @style="color:grey"})

                        @Html.AntiForgeryToken()

                        <div class="row">

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.IdProducto, htmlAttributes: new {@class="form-control-label"})
                                @Html.DropDownListFor(model => model.IdProducto, ViewBag.ComboProducto as List<SelectListItem>, new { @class = "form-control" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.IdUsuario, htmlAttributes: new{@class="form-control-label"})
                                @Html.DropDownListFor(model => model.IdUsuario, ViewBag.ComboUsuario as List<SelectListItem>, new { @class = "form-control" })
                            </div>

                        </div>

                        <br />
                        <br />
                        <br />
                        <br />
                        <br />

                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(m => m.DireccionEntrega, htmlAttributes: new{@class="form-control-label"})
                                @Html.EditorFor(m => m.DireccionEntrega)
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.Estado, htmlAttributes: new{@class="form-control-label"})
                                @Html.EditorFor(m => m.Estado/*, new{@class="form-control", @style="color:grey"}*/)

                            </div>
                        </div>

                        <br />
                        <br />
                        <br />
                        <br />

                        <div class="row">
                            <div class="col-md-8">
                                <button class="btn btn-primary" @*data-bs-toggle="modal" href="#exampleModalToggle"*@ role="button">Modificar</button>
                                <a class="btn btn-secondary" role="button" href="@Url.Action("VerEntregas","Entrega")">Cancelar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
