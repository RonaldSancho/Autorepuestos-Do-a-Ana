@model IEnumerable<Autorepuestos.Entities.ProductosEntities>
@{
    ViewBag.Title = "MostrarProductos";
}

<h1>Productos</h1>


<a class="btn btn-primary" role="button" href="@Url.Action("AgregarProducto", "Productos")">Nuevo Producto</a>

<br />
<br />
<table class="table">

    <thead>
        <tr>
            <th scope="col">Código Producto</th>
            <th scope="col">Producto</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col">Categoria</th>
            <th scope="col">Existencias</th>
            <th scope="col">Proveedor</th>
            <th scope="col">Opciones</th>
            <th scope="col"></th>
            <th scope="col"></th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.pIdProducto)</th>
                <td>@Html.DisplayFor(modelItem => item.NombreProducto)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                <td>@Html.DisplayFor(modelItem => item.NombreCategoria)</td>
                <td>@Html.DisplayFor(modelItem => item.Existencias)</td>
                <td>@Html.DisplayFor(modelItem => item.NombreProveedor)</td>
                <td>
                    <a class="btn btn-primary" role="button" href="@Url.Action("ModificarProducto","Productos", new{id = item.pIdProducto})">Actualizar</a>
                </td>
                <td><a class="btn btn-primary" role="button" href="@Url.Action("EliminarProducto","Productos", new{id = item.pIdProducto})">Eliminar</a></td>

            </tr>
        }


    </tbody>
</table>